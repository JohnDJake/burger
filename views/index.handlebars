<script src="/assets/js/index.js"></script>

<div class="container">
    <header class="jumbotron">
        <div class="row d-flex justify-content-center">
            <img src="/assets/img/burger.png" id="burger-img" alt="Burger Clipart">
        </div>
        <div class="row d-flex justify-content-center">
            <h1>Eat Some Burgers!</h1>
        </div>
    </header>
    <main>
        <section class="row">
            <div class="col-6">
                <h2 class="text-center">Ready to eat!</h2>
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burger-block}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-6">
                <h2 class="text-center">Ready to make!</h2>
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burger-block}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
</div>